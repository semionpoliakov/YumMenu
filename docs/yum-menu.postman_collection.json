  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "ingredientId",
      "value": "ingredient-id-sample",
      "type": "string"
    },
    {
      "key": "dishId",
      "value": "dish-id-sample",
      "type": "string"
    },
    {
      "key": "fridgeItemId",
      "value": "fridge-item-id-sample",
      "type": "string"
    },
    {
      "key": "menuId",
      "value": "menu-id-sample",
      "type": "string"
    },
    {
      "key": "menuItemId",
      "value": "menu-item-id-sample",
      "type": "string"
    },
    {
      "key": "shoppingListId",
      "value": "shopping-list-id-sample",
      "type": "string"
    },
    {
      "key": "shoppingListItemId",
      "value": "shopping-list-item-id-sample",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/health",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "health"
          ]
        },
        "description": "Returns service health status."
      }
    },
    {
      "name": "Ingredients",
      "item": [
        {
          "name": "List Ingredients",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/ingredients?active=true",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "ingredients"
              ],
              "query": [
                {
                  "key": "active",
                  "value": "true",
                  "description": "Filter by active state (true, false, all)."
                }
              ]
            },
            "description": "Lists ingredients with optional active filter."
          }
        },
        {
          "name": "Create Ingredient",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Tomato\",\n  \"unit\": \"pcs\",\n  \"isActive\": true\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/ingredients",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "ingredients"
              ]
            },
            "description": "Creates a new ingredient."
          }
        },
        {
          "name": "Update Ingredient",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Cherry Tomato\",\n  \"unit\": \"g\",\n  \"isActive\": true\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/ingredients/{{ingredientId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "ingredients",
                "{{ingredientId}}"
              ]
            },
            "description": "Updates an ingredient by id."
          }
        },
        {
          "name": "Delete Ingredient",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/ingredients/{{ingredientId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "ingredients",
                "{{ingredientId}}"
              ]
            },
            "description": "Deletes an ingredient by id."
          }
        }
      ]
    },
